# Core settings
# Generate your own value for production.
SECRET_KEY=change-me-in-production
DEBUG=False
# For local development only, set DEBUG=True in your local .env

# Comma-separated hosts (no spaces needed)
ALLOWED_HOSTS=127.0.0.1,localhost

# Comma-separated origins with scheme (used for CSRF)
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Production-focused settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=same-origin
# If behind a TLS-terminating proxy/load balancer:
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
